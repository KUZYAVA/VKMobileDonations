<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">


        <TextView
            android:id="@+id/heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13.5dp"
            android:layout_marginBottom="13.5dp"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:text="Дополнительно"
            android:textColor="#000000"
            android:textSize="21sp" />

        <ImageView
            android:id="@+id/backTo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="12.6dp"
            android:layout_marginTop="13.5dp"
            android:layout_marginBottom="13.5dp"
            android:gravity="center"
            android:src="@drawable/ic_back_outline_28"
            app:tint="#3F8AE0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/heading"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="18dp"
                android:fontFamily="@font/roboto_regular"
                android:text="Автор"
                android:textColor="#6D7885"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="26dp"
                android:background="@drawable/background_edit_text"
                android:drawableEnd="@drawable/ic_dropdown_16"
                android:drawableTint="#B8C1CC"
                android:hint="Имя и фамилия"
                android:fontFamily="@font/roboto_regular"
                android:padding="12dp"
                android:textColor="#000000"
                android:textColorHint="#818C99"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:fontFamily="@font/roboto_regular"
                android:text="Сбор завершится"
                android:textColor="#6D7885"
                android:textSize="14sp" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="12dp">

                <!--                <RadioButton-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_weight="1"-->
                <!--                    android:fontFamily="@font/roboto_regular"-->
                <!--                    android:paddingStart="13dp"-->
                <!--                    android:text="Когда соберём сумму"-->
                <!--                    android:textColor="#000000"-->
                <!--                    android:textSize="16sp" />-->

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:clickable="false"
                    android:fontFamily="@font/roboto_regular"
                    android:paddingStart="13dp"
                    android:text="В определённую дату"
                    android:textColor="#000000"
                    android:textSize="16sp" />
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="26dp"
                android:fontFamily="@font/roboto_regular"
                android:text="Дата окончания"
                android:textColor="#6D7885"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="26dp"
                android:background="@drawable/background_edit_text"
                android:drawableEnd="@drawable/ic_dropdown_16"
                android:drawableTint="#B8C1CC"
                android:fontFamily="@font/roboto_regular"
                android:hint="Выберите дату"
                android:padding="12dp"
                android:textColor="#000000"
                android:textColorHint="#818C99"
                android:textSize="16sp" />


        </LinearLayout>

        <TextView
            android:id="@+id/btn_create2"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/background_button"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:text="Создать сбор"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </RelativeLayout>
</layout>